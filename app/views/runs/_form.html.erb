<h2 class="text-2xl font-bold text-blue-500 mb-4">Ukas gloser</h2>
<table class="table-auto w-full mt-5">
  <thead class="bg-blue-500 text-white">
    <tr>
      <th class="px-4 py-2">Norsk</th>
      <th class="px-4 py-2">Engelsk</th>
    </tr>
  </thead>
  <tbody>
    <% Word.where(week: Date.today.cweek).each do |word| %>
      <tr class="bg-blue-200">
        <td class="border px-4 py-2"><%= word.norwegian.capitalize %></td>
        <td class="border px-4 py-2"><%= word.english.capitalize %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with(model: run, class: "contents") do |form| %>
  <% if run.errors.any? %>
    <div id="error_explanation" class="bg-red-500 text-white px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(run.errors.count, "error") %> prohibited this run from being saved:</h2>
      <ul>
        <% run.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :player_name, 'Navn', class: "block text-lg font-bold text-blue-500" %>
    <%= form.text_field :player_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="inline">
    <%= form.submit "Start", class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer hover:bg-blue-600" %>
  </div>
<% end %>
