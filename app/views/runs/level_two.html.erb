<div class="text-center">
  <h2 class="text-4xl font-bold text-blue-500 mb-4 inline-block">NIVÅ <%= @run.current_level.level_number%></h2>
</div>
<div class="text-center">
  <h3 class="text-xl font-bold text-blue-500 pre-wrap break-words"><%= @run.current_level.current_word_completed ? ' ' : "Skriv riktig #{@run.current_level.current_word_adjective} oversettelse av ordet:" %></h3>
</div>
<div class="bg-purple-200 text-purple-800 text-4xl mb-4 mx-auto text-center p-3 rounded-lg">
  <%=  @run.current_level.current_word[ @run.current_level.current_word_language].capitalize %>
</div>
<% if !@run.current_level.current_word_completed %>
  <%= form_with(url: level_two_answer_run_path, class: 'flex mb-4') do |form| %>
    <%= form.text_field :guess, class: 'flex-grow mr-2', autocomplete: 'off' %>
    <%= form.submit 'Svar', class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer hover:bg-blue-600" %>
  <% end %>
  <% if @run.current_level.level_number == 2 &&  %>
    <div class="text-center">
      <h4 class="text-lg font-bold text-blue-500 inline-block">Bokstavene i løsningen er:</h2>
    </div>
    <div class="bg-gray-200 text-gray-800 text-lg mb-4 mx-auto text-center p-3 rounded-lg">
      <%= @run.current_level.current_word_shuffled_solution.upcase.chars.join('-') %>
    </div>
  <% end %>
<% end %>
<% if  @run.current_level.current_word_completed? %>
  <div class="text-center">
    <h3 class="text-xl font-bold text-orange-500 mb-4 inline-block">Du svarte: <%= @run.current_level.current_word_guess %></h3>
  </div>
  <% answer_class = @run.current_level.current_word_correct ? 'text-green-500' : 'text-red-500' %>
  <div class="text-center">
    <p class="<%= answer_class%>">
      <%= @run.current_level.current_word_correct ? 'Gratulerer! Det var riktig svar.' : "Det var desverre feil svar, riktig svar var #{@run.current_level.current_word[ @run.current_level.current_word_options_language].capitalize}" %>
    </p>
  </div>
  <div class="text-center mt-4">
    <%= button_to 'Gå til neste >>', next_run_path(@run), class: 'bg-indigo-500 hover:bg-indigo-600 text-center rounder-lg text-white p-4', autofocus: true %>
  </div>
<% end %>
