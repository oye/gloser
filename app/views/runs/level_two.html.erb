<div class="bg-gray-100 p-5">
  <div class="text-center">
    <h2 class="text-3xl font-bold text-blue-700 mb-4 inline-block">NIVÅ <%= @run.current_level.level_number%></h2>
  </div>
  <div class="text-center">
    <h3 class="text-xl font-bold text-blue-700 pre-wrap break-words"><%= @run.current_level.current_word_completed ? ' ' : "Skriv riktig #{@run.current_level.current_word_adjective} oversettelse:" %></h3>
  </div>
  <div class="bg-purple-300
 text-purple-800 text-4xl mb-3 mx-auto text-center p-3 rounded-lg">
    <%=  @run.current_level.current_word[ @run.current_level.current_word_language].capitalize %>
  </div>
  <% if !@run.current_level.current_word_completed %>
    <% if @run.current_level.level_number == 2 &&  %>
      <div class="text-center">
        <h4 class="text-base font-bold text-blue-700 inline-block">Bokstavene i løsningen er:</h2>
      </div>
      <div class="bg-gray-200 text-gray-800 text-lg mb-4 mx-auto text-center p-1 rounded-lg w-min whitespace-pre"><%= @run.current_level.current_word_shuffled_solution.upcase.chars.join('-').gsub('- -', '   ') %></div>
    <% end %>
    <%= form_with(url: level_two_answer_run_path, class: 'flex mb-4') do |form| %>
      <%= form.text_field :guess, class: 'flex-grow mr-2', autocomplete: 'off' %>
      <%= form.submit 'Svar', class: "rounded-lg py-3 px-5 bg-blue-700 text-white inline-block font-medium cursor-pointer hover:bg-blue-600 shadow-md" %>
    <% end %>
  <% end %>
  <% if  @run.current_level.current_word_completed? %>
    <div class="text-center">
      <h3 class="text-xl font-bold text-amber-500 mb-4 inline-block">Du svarte: <%= @run.current_level.current_word_guess.upcase %></h3>
    </div>
    <% answer_class = @run.current_level.current_word_correct ? 'text-emerald-500' : 'text-pink-500' %>
    <div class="text-center">
      <p class="<%= answer_class%>">
        <%= @run.current_level.current_word_correct ? 'Gratulerer! Det var riktig svar.' : "Det var desverre feil svar, riktig svar var #{@run.current_level.current_word[ @run.current_level.current_word_options_language].upcase}" %>
      </p>
    </div>
    <div class="text-center mt-4">
      <%= button_to 'Gå til neste >>', next_run_path(@run), class: 'bg-indigo-700 hover:bg-indigo-600 text-center rounder-lg text-white p-4 shadow-md', autofocus: true %>
    </div>
  <% end %>
</div>
