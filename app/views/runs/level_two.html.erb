<div class="text-center">
  <h2 class="text-4xl font-bold text-blue-500 mb-6 inline-block">NIVÅ 2</h2>
</div>
<div class="text-center">
  <h3 class="text-xl font-bold text-blue-500 mb-6 inline-block whitespace-pre"><%= @run.current_level.current_word_completed ? ' ' : 'Skriv riktig oversettelse av:' %></h3>
</div>
<div class="bg-purple-200 text-purple-800 text-4xl mb-6 mx-auto text-center p-3 rounded-lg"><%=  @run.current_level.current_word[ @run.current_level.current_word_language].capitalize %></div>
<% if !@run.current_level.current_word_completed %>
  <%= form_with(url: level_two_answer_run_path, class: 'flex') do |form| %>
    <%= form.text_field :guess, class: 'mr-2', autofocus: true %>
    <%= form.submit 'Svar', class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer hover:bg-blue-600" %>
  <% end %>
<% end %>
<% if  @run.current_level.current_word_completed? %>
  <div class="text-center">
    <h3 class="text-xl font-bold text-orange-500 mb-6 inline-block">Du svarte: <%= @run.current_level.current_word_guess %></h3>
  </div>
  <% answer_class = @run.current_level.current_word_correct ? 'text-green-500' : 'text-red-500' %>
  <div class="text-center mt-6">
    <p class="<%= answer_class%>">
      <%= @run.current_level.current_word_correct ? 'Gratulerer! Det var riktig svar.' : "Det var desverre feil svar, riktig svar var #{@run.current_level.current_word[ @run.current_level.current_word_options_language].capitalize}" %>
    </p>
  </div>
  <div class="text-center mt-10">
    <%= button_to 'Gå til neste >>', next_run_path(@run), class: 'bg-indigo-500 hover:bg-indigo-600 text-center rounder-lg text-white p-4', autofocus: true %>
  </div>
<% end %>
